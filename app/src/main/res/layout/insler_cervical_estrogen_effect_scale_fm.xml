<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        tools:context=".medicaltools.functions.Obstetrics_and_Gynecology.Gynecology.Insler_Cervical_Estrogen_Effect_Scale_fm">

        <!-- Header Section -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/green_kuan"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="Insler 宫颈雌激素影响评分"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cervical Score (Insler Index)"
            android:textColor="#CCFFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <!-- Main Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- Evaluation Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Table Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="评分"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:paddingVertical="8dp"/>

                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="10"
                                android:orientation="horizontal">
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:gravity="center" android:layout_weight="1" android:textColor="#666666" android:paddingVertical="8dp" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="1" android:gravity="center" android:layout_weight="1" android:textColor="#666666" android:paddingVertical="8dp" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="2" android:gravity="center" android:layout_weight="1" android:textColor="#666666" android:paddingVertical="8dp" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="3" android:gravity="center" android:layout_weight="1" android:textColor="#666666" android:paddingVertical="8dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 1: 粘液量 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/tv10" android:layout_width="0dp" android:layout_height="match_parent" android:text="粘液量" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center" android:padding="4dp"/>
                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0" />
                            <RadioGroup android:id="@+id/Rgroup1" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="10">
                                <RadioButton android:id="@+id/rb10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="无" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb11" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="颈管内" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb12" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="颈管口见粘液" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb13" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="溢出宫颈口" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 2: 拉丝度 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/tv20" android:layout_width="0dp" android:layout_height="match_parent" android:text="拉丝度" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center" android:padding="4dp"/>
                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0" />
                            <RadioGroup android:id="@+id/Rgroup2" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="10">
                                <RadioButton android:id="@+id/rb20" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="无" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb21" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="达阴道1/4" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb22" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="达阴道1/2" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb23" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="达阴道口" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 3: 结晶 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/tv30" android:layout_width="0dp" android:layout_height="match_parent" android:text="结晶" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center" android:padding="4dp"/>
                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0" />
                            <RadioGroup android:id="@+id/Rgroup3" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="10">
                                <RadioButton android:id="@+id/rb30" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="无" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb31" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="少许细条结晶" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb32" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="羊齿结晶" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb33" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="典型结晶" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 4: 宫颈口 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <TextView android:id="@+id/tv40" android:layout_width="0dp" android:layout_height="match_parent" android:text="宫颈口" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center" android:padding="4dp"/>
                            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E0E0E0" />
                            <RadioGroup android:id="@+id/Rgroup4" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="10">
                                <RadioButton android:id="@+id/rb40" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="无" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb41" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="裂隙" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb42" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="部分开张" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                                <RadioButton android:id="@+id/rb43" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="开张(瞳孔样)" android:textSize="10sp" android:scaleX="0.75" android:scaleY="0.75" android:paddingStart="0dp" android:buttonTint="@color/green_kuan" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Appendix Section -->
                <TextView
                    android:id="@+id/tv_appendix_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="详情说明与参考"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content_appendix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Fixed Bottom Result Bar (Standard EPDS Style) -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="12dp"
            android:orientation="vertical"
            android:paddingVertical="24dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 分 （您已选择 0 个必选项）"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F3F4">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/hintTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:elevation="1dp"
                android:text="周"
                android:textColor="#109D58"
                android:textSize="25sp" />

            <LinearLayout
                android:id="@+id/main1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_input"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginEnd="10dp"
                    android:paddingEnd="10dp"
                    android:gravity="end|center"
                    android:text="0"
                    android:textColor="#3C4043"
                    android:textSize="30sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#F1F3F4"/>
                <TextView
                    android:id="@+id/tv_result"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="end|center"
                    android:paddingEnd="10dp"
                    android:textColor="#109D58"
                    android:textSize="30sp"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Mode Selection Group -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/selecToggleGroup"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:singleSelection="true"
            app:selectionRequired="true"
            app:checkedButton="@+id/modelSelect_week"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_bracket"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintHorizontal_weight="4">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modelSelect_year"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="年"
                android:textColor="#3C4043"
                android:textSize="14sp"
                app:cornerRadius="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modelSelect_month"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="月"
                android:textColor="#3C4043"
                android:textSize="14sp"
                app:cornerRadius="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modelSelect_day"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="日"
                android:textColor="#3C4043"
                android:textSize="14sp"
                app:cornerRadius="0dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/modelSelect_week"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="周"
                android:textColor="#3C4043"
                android:textSize="14sp"
                app:cornerRadius="0dp" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Independent Bracket Button -->
        <Button
            android:id="@+id/btn_bracket"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/buttonseletor"
            android:text="( )"
            android:textColor="#3C4043"
            android:textSize="20sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/selecToggleGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 1 -->
        <Button
            android:id="@+id/buttonClear"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="AC"
            android:textColor="#D93025"
            android:textSize="25sp"
            app:backgroundTint="#FEEBEB"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPN"
            app:layout_constraintTop_toBottomOf="@+id/selecToggleGroup"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Button
            android:id="@+id/buttonPN"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="-+"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/buttonClear"
            app:layout_constraintEnd_toStartOf="@+id/buttonDivide"
            app:layout_constraintTop_toTopOf="@+id/buttonClear"
            app:layout_constraintBottom_toBottomOf="@+id/buttonClear"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonDivide"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="÷"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/buttonPN"
            app:layout_constraintEnd_toStartOf="@+id/buttonMultiply"
            app:layout_constraintTop_toTopOf="@+id/buttonClear"
            app:layout_constraintBottom_toBottomOf="@+id/buttonClear"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonMultiply"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="*"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/buttonDivide"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/buttonClear"
            app:layout_constraintBottom_toBottomOf="@+id/buttonClear"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/button7"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="7"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/buttonClear"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="8"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintEnd_toStartOf="@+id/button9"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="9"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button8"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonDelete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="←"
            android:textColor="#3C4043"
            android:textSize="30sp"
            android:textStyle="bold"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/button9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button7"
            app:layout_constraintBottom_toBottomOf="@+id/button7"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/button4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="4"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button7"
            app:layout_constraintBottom_toTopOf="@+id/button1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="5"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="6"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintEnd_toStartOf="@+id/buttonSubtract"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonSubtract"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="-"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button4"
            app:layout_constraintBottom_toBottomOf="@+id/button4"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/button1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="1"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button4"
            app:layout_constraintBottom_toTopOf="@+id/button0"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="2"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button1"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintBottom_toBottomOf="@+id/button1"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="3"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintEnd_toStartOf="@+id/buttonAdd"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintBottom_toBottomOf="@+id/button1"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonAdd"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="+"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button1"
            app:layout_constraintBottom_toBottomOf="@+id/button1"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 5: 0, . -->
        <Button
            android:id="@+id/button0"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="0"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonDot"
            app:layout_constraintTop_toBottomOf="@+id/button1"
            app:layout_constraintBottom_toTopOf="@+id/localDate"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Button
            android:id="@+id/buttonDot"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:text="."
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/button0"
            app:layout_constraintEnd_toStartOf="@+id/buttonSplitDate"
            app:layout_constraintTop_toTopOf="@+id/button0"
            app:layout_constraintBottom_toBottomOf="@+id/button0"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 5 & 6 Spanning: / and = -->
        <Button
            android:id="@+id/buttonSplitDate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="/"
            android:textColor="#3C4043"
            android:textSize="30sp"
            app:backgroundTint="#F8F9FA"
            app:layout_constraintStart_toEndOf="@+id/buttonDot"
            app:layout_constraintEnd_toStartOf="@+id/buttonEqual"
            app:layout_constraintTop_toTopOf="@+id/button0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <Button
            android:id="@+id/buttonEqual"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp"
            app:backgroundTint="#109D58"
            app:layout_constraintStart_toEndOf="@+id/buttonSplitDate"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1" />

        <!-- Row 6: localDate spans 2 columns horizontally -->
        <Button
            android:id="@+id/localDate"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/buttonseletor"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#109D58"
            android:textSize="18sp"
            app:backgroundTint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonSplitDate"
            app:layout_constraintTop_toBottomOf="@+id/button0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

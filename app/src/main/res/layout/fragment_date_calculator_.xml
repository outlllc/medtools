<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hintTextView"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:text="周"
        android:elevation="1dp"/>

    <LinearLayout
        android:id="@+id/main1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/answerEditText"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:ems="10"
            android:focusable="false"
            android:gravity="right|center"
            android:text="0"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#60BFCC"
            android:orientation="horizontal"
            >
            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/selecToggleGroup"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="bottom"
                android:background="#60BFCC"
                android:paddingRight="1dp"
                android:paddingLeft="1dp"
                android:layout_marginBottom="5dp"
                app:checkedButton="@+id/buttonweek">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modelSelect_year"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetRight="4dp"
                    android:insetBottom="0dp"
                    android:text="YEAR"
                    android:textColor="#FF000000"
                    android:textSize="10sp"
                    app:backgroundTint="@color/calnonechecked"
                    app:cornerRadius="2dp"
                    app:strokeColor="#60BFCC"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modelSelect_month"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetRight="4dp"
                    android:insetBottom="0dp"
                    android:text="MON"
                    android:textColor="#FF000000"
                    android:textSize="10sp"
                    app:backgroundTint="@color/calnonechecked"
                    app:cornerRadius="20dp"
                    app:strokeColor="#60BFCC" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modelSelect_day"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetRight="4dp"
                    android:insetBottom="0dp"
                    android:text="DAY"
                    android:textColor="#FF000000"
                    android:textSize="10sp"
                    app:backgroundTint="@color/calnonechecked"
                    app:cornerRadius="20dp"
                    app:strokeColor="#60BFCC"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modelSelect_week"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetRight="4dp"
                    android:insetBottom="0dp"
                    android:text="WEEK"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp"
                    app:backgroundTint="#FF03A9F4"
                    app:cornerRadius="20dp"
                    app:strokeColor="#60BFCC"
                    app:strokeWidth="0dp" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modelSelect_date"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="4dp"
                    android:text="MATH"
                    android:textColor="#FF000000"
                    android:textSize="10sp"
                    app:backgroundTint="@color/calnonechecked"
                    app:cornerRadius="2dp"
                    app:strokeColor="#60BFCC"
                    app:strokeWidth="0dp" />

            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="7"
            android:columnCount="4"
            android:background="#60BFCC">

            <Button
                android:id="@+id/buttonClear"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="AC"
                android:textSize="28sp" />

            <Button
                android:id="@+id/buttonPN"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="-+"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonDivide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="÷"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonMultiply"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="*"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="7"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="8"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="9"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="←"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="4"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="5"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="6"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonSubtract"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="-"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_rowWeight="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                android:orientation="horizontal"
                android:text="1"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="2"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:text="3"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonAdd"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="+"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                style="?android:attr/borderlessButtonStyle"
                app:backgroundTint="@null"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/button0"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/buttonseletor"
                android:orientation="horizontal"
                android:text="0"
                android:textSize="30sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/buttonDot"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="horizontal"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/buttonseletor"
                app:backgroundTint="@null"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="4dp"
                android:text="."
                android:textSize="30sp"/>

            <Button
                android:id="@+id/buttonEqual"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:text="="
                android:textSize="30sp"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/buttonseletor"
                app:backgroundTint="@null"
                android:layout_marginRight="4dp" />

            <Button
                android:id="@+id/buttonSplitDate"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                style="?android:attr/borderlessButtonStyle"
                android:background="@drawable/buttonseletor"
                app:backgroundTint="@null"
                android:layout_marginEnd="4dp"
                android:orientation="horizontal"
                android:text="/"
                android:textSize="30sp" />

            <Button
                android:id="@+id/localDate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="5"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_rowSpan="1"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/buttonseletor"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:textSize="25sp"
                app:backgroundTint="@null" />



        </GridLayout>
    </LinearLayout>
</FrameLayout>
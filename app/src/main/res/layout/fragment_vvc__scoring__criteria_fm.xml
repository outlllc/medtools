<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FA"
        tools:context=".medicaltools.functions.Obstetrics_and_Gynecology.Gynecology.Vvc_Scoring_Criteria_fm">

        <!-- Header Section -->
        <View
            android:id="@+id/header_bg"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@color/green_kuan"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:text="VVC 评分标准"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="外阴阴道假丝酵母菌病症状体征评分"
            android:textColor="#CCFFFFFF"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@+id/tv_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <!-- Main Scrollable Area -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@id/bottom_container"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <!-- Table Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <!-- Table Header Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="8dp">
                            <TextView
                                android:id="@+id/tv1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.2"
                                android:gravity="center"
                                android:text="症状及体征"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                android:textSize="13sp" />
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="9"
                                android:orientation="horizontal">
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="0" android:gravity="center" android:layout_weight="1.2" android:textColor="#666666" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="1" android:gravity="center" android:layout_weight="2.6" android:textColor="#666666" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="2" android:gravity="center" android:layout_weight="2.6" android:textColor="#666666" />
                                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="3" android:gravity="center" android:layout_weight="2.6" android:textColor="#666666" />
                            </LinearLayout>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginVertical="4dp"/>

                        <!-- Row 1: 瘙痒 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="6dp" android:gravity="center_vertical">
                            <TextView android:id="@+id/tv10" android:layout_width="0dp" android:layout_height="wrap_content" android:text="瘙痒" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center"/>
                            <RadioGroup android:id="@+id/Rgroup1" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="9">
                                <RadioButton android:id="@+id/rb10" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="无" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb11" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="偶有发作" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb12" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="症状明显" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb13" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="持续发作、坐立不安" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 2: 疼痛 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="6dp" android:gravity="center_vertical">
                            <TextView android:id="@+id/tv20" android:layout_width="0dp" android:layout_height="wrap_content" android:text="疼痛" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center"/>
                            <RadioGroup android:id="@+id/Rgroup2" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="9">
                                <RadioButton android:id="@+id/rb20" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="无" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb21" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="轻" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb22" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="中" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb23" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="重" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 3: 充血、水肿 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="6dp" android:gravity="center_vertical">
                            <TextView android:id="@+id/tv30" android:layout_width="0dp" android:layout_height="wrap_content" android:text="充血、水肿" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center"/>
                            <RadioGroup android:id="@+id/Rgroup3" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="9">
                                <RadioButton android:id="@+id/rb30" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="无" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb31" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="＜1/3阴道壁充血" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb32" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="1/3~2/3阴道壁充血" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb33" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="＞2/3阴道壁充血" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 4: 外阴抓痕、皲裂 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="6dp" android:gravity="center_vertical">
                            <TextView android:id="@+id/tv40" android:layout_width="0dp" android:layout_height="wrap_content" android:text="外阴抓痕、皲裂" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center"/>
                            <RadioGroup android:id="@+id/Rgroup4" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="9">
                                <RadioButton android:id="@+id/rb40" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="无" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <TextView android:id="@+id/rb41" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" />
                                <TextView android:id="@+id/rb42" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" />
                                <RadioButton android:id="@+id/rb43" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="有" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>
                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" />

                        <!-- Row 5: 分泌物 -->
                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:paddingVertical="6dp" android:gravity="center_vertical">
                            <TextView android:id="@+id/tv50" android:layout_width="0dp" android:layout_height="wrap_content" android:text="分泌物" android:layout_weight="1.2" android:textSize="12sp" android:textColor="#444444" android:gravity="center"/>
                            <RadioGroup android:id="@+id/Rgroup5" android:layout_width="0dp" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_weight="9">
                                <RadioButton android:id="@+id/rb50" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1.2" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="无" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb51" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="较正常稍多" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb52" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="量多、无溢出" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                                <RadioButton android:id="@+id/rb53" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2.6" android:scaleX="0.75" android:scaleY="0.75" android:buttonTint="@color/green_kuan" android:text="量多、有溢出" android:textSize="11sp" android:paddingStart="0dp" android:gravity="center" />
                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Appendix Section -->
                <TextView
                    android:id="@+id/tv_appendix_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="详情说明与参考"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_content_appendix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:nestedScrollingEnabled="false"
                    android:overScrollMode="never"
                    android:paddingHorizontal="16dp"
                    android:paddingBottom="16dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Fixed Bottom Result Bar -->
        <LinearLayout
            android:id="@+id/bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="12dp"
            android:orientation="vertical"
            android:paddingVertical="24dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv141"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 分 （您已选择 0 个必选项）"
                android:textColor="#D32F2F"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

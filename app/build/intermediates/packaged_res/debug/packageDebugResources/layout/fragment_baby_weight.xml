<?xml version="1.0" encoding="utf-8"?>

                                                        

    

           

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/fragment_baby_weight_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <EditText
                    android:id="@+id/etPregnancyWeek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="孕周 (取整数，例如 20)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etBPD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="BPD (双顶径，mm)(31-100mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etHC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="HC (头围，mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etAC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="AC (腹围，mm)(200-400mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etFL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="FL (股骨，mm)(40-83mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etHL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="HL (肱骨, mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etUlna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="尺骨长 (mm)"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/etTibia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="胫骨长 (mm)"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="末次月经：" />

                    <EditText
                        android:id="@+id/LMP"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="如2025/12/01"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="检查日期：" />

                    <EditText
                        android:id="@+id/etInspectionDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:hint="如2026/04/01"
                        android:textSize="15sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnCompare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/buttonseletor"
                    android:backgroundTint="@null"
                    android:text="计算" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/tvPredictedWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:hint="预测体重（g）"
                    android:lines="3"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
         
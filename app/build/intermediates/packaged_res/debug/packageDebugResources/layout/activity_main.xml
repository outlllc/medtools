<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="@color/green">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tg_first_page"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:background="@color/green"
            app:singleSelection="true"
            android:paddingRight="1dp"
            android:paddingLeft="1dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calculation_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="计算器"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/green_kuan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="0dp"
                app:strokeColor="@color/green_kuan"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/weightC_button"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="体重计"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/lightcyan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="20dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/yuxi"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="医学计算"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/lightcyan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="20dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/myM"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="我的"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                app:backgroundTint="@color/lightcyan"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="0dp"
                app:strokeColor="@color/green"
                app:strokeWidth="2dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>

</LinearLayout>